# Phone Store Management System - Environment Configuration
# Copy this file to .env and update with your settings

# Database Configuration
DATABASE_PATH=shop.db

# Shop Information
SHOP_NAME=Your Phone Shop
SHOP_ADDRESS=123 Main Street, City, Country
SHOP_PHONE=+1234567890
SHOP_EMAIL=info@yourshop.com

# Application Settings
THEME=flatly
LOW_STOCK_THRESHOLD=10

# Backup Settings
MAX_BACKUPS=10
AUTO_BACKUP=true
BACKUP_INTERVAL_DAYS=7

# Security Settings
SESSION_TIMEOUT_MINUTES=30
PASSWORD_MIN_LENGTH=8
REQUIRE_PASSWORD_CHANGE=true

# Printer Settings (Optional)
THERMAL_PRINTER_NAME=POS-80
THERMAL_PRINTER_WIDTH=48
ENABLE_THERMAL_PRINTING=false

# Barcode Scanner Settings (Optional)
BARCODE_SCANNER_ENABLED=false
BARCODE_PREFIX=
BARCODE_SUFFIX=

# Email Settings (Future Feature)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ENABLE_EMAIL_NOTIFICATIONS=false

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGGING=false
